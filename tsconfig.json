{
"compilerOptions": {
"target": "ES2020",
"useDefineForClassFields": true,
"module": "ESNext",
"lib": ["ES2020", "DOM", "DOM.Iterable"],
"moduleResolution": "Bundler",
"strict": true,
"resolveJsonModule": true,
"isolatedModules": true,
"esModuleInterop": true,
"skipLibCheck": true,
"baseUrl": ".",
"paths": {
"@core/*": ["src/core/*"],
"@scenes/*": ["src/scenes/*"],
"@ui/*": ["src/ui/*"],
"@config/*": ["src/config/*"],
"@cards/*": ["src/cards/*"]
}
},
"include": ["src"]
}